<html>
<h1>Bookings</h1>
<hr>
<body>
<form action="/bookings" method="post">
  <div>
    <h3>
      <label for="members_id">Select Member:</label>
      <select name="members_id" id="members_id">
        <% @members.each do |member| %>
        <option value=<%= member.id %></option>
        <%= member.first_name %> <%= member.last_name %>
        <% end %>
      </select>
    </h3>
  </div>
  <div>
    <h3>
      <label for="activities_id">Select Activity:</label>
      <select name="activities_id" id="activities_id">
        <% @activities.each do |activity| %>
        <option value=<%= activity.id %></option>
        <%= activity.session %>

        <% end %>
      </select>
    </h3>
  </div>
  <hr>
  <br>
  <center>  <input type="submit" value="Submit Booking"></center>
</form>
</body>
</html>
